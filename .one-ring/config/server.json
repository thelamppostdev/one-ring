{
  "server": {
    "name": "one-ring-task-manager",
    "version": "1.0.0",
    "description": "TypeScript MCP server for AI task management"
  },
  "storage": {
    "baseDirectory": ".one-ring",
    "backupRetentionDays": 30,
    "autoBackup": true,
    "autoBackupInterval": "daily"
  },
  "features": {
    "taskDecomposition": true,
    "dependencyTracking": true,
    "timeTracking": true,
    "statusReporting": true
  },
  "limits": {
    "maxProjectsPerInstance": 1000,
    "maxTasksPerProject": 10000,
    "maxSubtaskDepth": 5
  },
  "defaults": {
    "projectStatus": "planning",
    "taskStatus": "todo",
    "taskPriority": "medium"
  }
}
